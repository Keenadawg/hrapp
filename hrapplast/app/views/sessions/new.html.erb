<%= form_tag sessions_path do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: "textInput" %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password], class: "textInput" %>
  </div>
  <div>
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>
  </div>
  <div><%= submit_tag "Log in", class: "button" %></div>
<% end %>
